<Window x:Class="DevRant.WPF.RantViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevRant.WPF"
        xmlns:ctrl="clr-namespace:DevRant.WPF.Controls"
        SizeToContent="Height"
        WindowStyle="ToolWindow"
        mc:Ignorable="d"
        Title="Viewer" Width="600" 
        x:Name="rantWindow" 
        WindowStartupLocation="CenterScreen" >

    <Window.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding CloseCommand}"/>
    </Window.InputBindings>
    <DockPanel LastChildFill="True">

        <Menu DockPanel.Dock="Top" HorizontalAlignment="Stretch">
            <MenuItem Command="{Binding OpenInBrowserCommand}" Header="Open In Browser"/>
            <MenuItem Command="{Binding CloseCommand}" Header="Close"/>
        </Menu>

        <ScrollViewer MaxHeight="700" VerticalScrollBarVisibility="Auto">
            <Grid Margin="5" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <ctrl:RantControl 
                    Grid.Row="0" 
                    VoteClicked="Button_Clicked"
                    UsernameVisibility="Visible"
                    DateVisibility="Visible"
                    DataContext="{Binding DataContext.Rant, ElementName=rantWindow}"
                    LoggedIn="{Binding DataContext.LoggedIn, ElementName=rantWindow}"/>

                <!-- MinHeight="30" Background="Aqua" -->
                <ItemsControl Margin="1" VerticalAlignment="Top"
                          Background="LightBlue"
                          Grid.Row="2" ItemsSource="{Binding DataContext.Comments, ElementName=rantWindow}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ctrl:RantControl
                                VoteClicked="Button_Clicked"
                                Margin="30 5 5 5" 
                                Background="White"
                                UsernameVisibility="Visible"
                                DateVisibility="Visible"
                                LoggedIn="{Binding DataContext.LoggedIn, ElementName=rantWindow}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</Window>
